<h1 style="margin-bottom: 35px;">Best Books</h1>

<div class="container book-grid">
  <div class="row">
    <% @books.each_with_index do |book, index| %>
      <div class="col-sm-4 grid-item">
        
        <%= image_tag(book.img_url, :alt => book.title, class: "book-cover") %>
        <p class="book-title"><%= book.title.split.map(&:capitalize).join(' ') %></p>
        <p class="book-author"><%= book.author.split.map(&:capitalize).join(' ') %></p>
        <p class="book-nps">NPS: <span class="<%= book.nps_score >= 0 ? 'good-nps' : 'bad-nps' %>"><%= book.nps_score.round(2) %></span></p>
      </div>
    <% end %>
  </div>
</div>
