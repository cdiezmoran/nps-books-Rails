<h1>Best Books</h1>

<% @books.each_with_index do |book, index| %>
  <div class="card card-block">
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-10">
        <p class="card-title"><%= book["book_details"][0]["title"].split.map(&:capitalize).join(' ') %></p>
        <p class="card-text">NPS: <%= @nps_scores[index] %></p>
      </div>
    </div>
  </div>
<% end %>
