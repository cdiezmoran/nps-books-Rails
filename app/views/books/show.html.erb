<div class="show-page">
  <div class="row book-info">
    <div class="col-md-2">
      <%= image_tag(@book.img_url, :alt => @book.title, class: "book-cover-lg") %>
    </div>
    <div class="col-md-6">
      <h1><%= @book.title %></h1>
      <h3><%= @book.author %></h3>
      <div class="book-details">
        <h4>Score</h4>
        <h2><%= @book.nps_score %></h2>
        <h3><span class="<%= @book.nps_color_class %>"><%= @book.nps_description_word %></span></h3>
      </div>
    </div>
    <div class="col-md-4" style="text-align: center">
      <img src="http://authoridentity.com/wp-content/uploads/2015/02/Amazon-preorder.png" alt="Amazon Order" class="buy-img">
    </div>
  </div>
  <div class="horizontal-divider"></div>
  <div class="row">
    <div class="container">
      <div class="col-md-8 description">
        <p>
          <%= sanitize @book.description %>
        </p>
      </div>
      <div class="col-md-1 vcenter" style="width: 0;">
        <div class="vertical-divider"></div>
      </div><!--
      --><div class="col-md-3 vcenter" style="padding: 0">
        <p>
          <span>Publisher: </span><%= @book.publisher %>
        </p>
        <p>
          <span>Pages: </span><%= @book.page_count %>
        </p>
        <p>
          <span>Categories: <span><%= get_categories_string(@book.categories) %></span></span>
        </p>
      </div>
    </div>
  </div>
</div>
